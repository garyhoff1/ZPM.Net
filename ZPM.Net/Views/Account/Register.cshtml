@model ZPM.Net.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style type="text/css">
    td { padding: 4px 10px 5px 6px; }
</style>

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <table>
        <tr>
            <td>@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })</td>
            <td>@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.DisplayName, new { @class = "col-md-2 control-label" })</td>
            <td>@Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.UserInitials, new { @class = "col-md-2 control-label" })</td>
            <td>@Html.TextBoxFor(m => m.UserInitials, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(m => m.UserInitials, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })</td>
            <td>@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })</td>
            <td>@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Register" class="btn btn-default" style="font-size:1.1em;" /></td>
            <td></td>
        </tr>
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
